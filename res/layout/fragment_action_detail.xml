<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@drawable/gradient_menu"
        android:layout_margin="0dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRingerOff"
            style="@attr/buttonBarButtonStyle"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_lock_ringer_off" />

		<Button
            android:id="@+id/buttonLowVolume"
            style="@attr/buttonBarButtonStyle"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_lock_ringer_low" />

        <SeekBar
            android:id="@+id/seekBarVolume"
            style="@style/CustomSeekBar"
            android:layout_width="73dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dip"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:progressDrawable="@drawable/seek_bar" />

        <Button
            android:id="@+id/buttonHighVolume"
            style="@attr/buttonBarButtonStyle"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_lock_ringer_high"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/buttonPCItem"
            style="@attr/buttonBarButtonStyle"
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:background="@drawable/send_to_pc" />

        <Button
            android:id="@+id/buttonTVItem"
            style="@attr/buttonBarButtonStyle"
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/send_to_tv" />
    </LinearLayout>

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	
    	<LinearLayout
	   	    android:id="@+id/linearLayout"
	   	    android:layout_width="120dp"
	   	    android:layout_height="match_parent"
	   	    android:orientation="vertical" >
		    
			<ListView
			    android:id="@+id/listViewFiles"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" />
			
			<Button
			    android:id="@+id/buttonAddItem"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" />
			
		</LinearLayout>
	
		<GridView
	        android:id="@+id/gridView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:numColumns="3" >
		    
		</GridView>
	</LinearLayout> 

</LinearLayout>
